  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:unit": "react-scripts test --testPathIgnorePatterns=src/__tests__/integration --watchAll=false",
    "test:integration": "react-scripts test src/__tests__/integration --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prettier-check": "prettier --check 'src/**/*.{js,ts,tsx,css}'",
    "prettier-fix": "prettier --write 'src/**/*.{js,ts,tsx,css}'",
    "typecheck": "tsc --noEmit",
    "start-private-chart-api": "node src/server/privateChartServer.js",
    "eslint-check": "eslint src --ext .ts,.tsx",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --config=ci/configs/playwright-debug.config.ts",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:mobile": "playwright test --config=playwright.mobile.config.ts",
    "test:e2e:mobile:ui": "playwright test --config=playwright.mobile.config.ts --ui",
    "test:e2e:mobile:headed": "playwright test --config=playwright.mobile.config.ts --headed",
    "test:e2e:mobile:debug": "playwright test --config=playwright.mobile.config.ts --debug",
    "test:e2e:mobile:report": "playwright show-report --config=playwright.mobile.config.ts",
    "test:e2e:core": "playwright test --config=ci/configs/playwright-core.config.ts",
    "test:e2e:analysis": "playwright test --config=ci/configs/playwright-analysis.config.ts",
    "test:e2e:comprehensive": "playwright test --config=ci/configs/playwright-comprehensive.config.ts",
    "test:e2e:mobile:core": "playwright test --config=ci/configs/playwright-mobile-core.config.ts",
    "test:e2e:mobile:analysis": "playwright test --config=ci/configs/playwright-mobile-analysis.config.ts",
    "test:e2e:mobile:comprehensive": "playwright test --config=ci/configs/playwright-mobile-comprehensive.config.ts"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jest/no-conditional-expect": "off",
      "testing-library/no-node-access": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.ts",
          "**/*.test.tsx",
          "**/__tests__/**/*"
        ],
        "rules": {
          "jest/no-conditional-expect": "off",
          "testing-library/no-node-access": "off"
        }
      }
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^react-app/jest$": "react-app/jest",
      "^d3$": "<rootDir>/src/__mocks__/d3.js",
      "^d3-geo$": "<rootDir>/src/__mocks__/d3-geo.js",
      "^d3-zoom$": "<rootDir>/src/__mocks__/d3-zoom.js",
      "^d3-scale$": "<rootDir>/src/__mocks__/d3-scale.js",
      "^d3-scale-chromatic$": "<rootDir>/src/__mocks__/d3-scale-chromatic.js",
      "^d3-array$": "<rootDir>/src/__mocks__/d3-array.js",
      "^d3-selection$": "<rootDir>/src/__mocks__/d3-selection.js"
    },
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "transformIgnorePatterns": [
      "node_modules/(?!(d3-geo|d3-zoom|d3-scale|d3-scale-chromatic|d3-array|d3-selection)/)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31",
    "@types/d3-dispatch": "3.0.4",
    "webpack-dev-server": "^5.1.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15"
  },
  "resolutions": {
