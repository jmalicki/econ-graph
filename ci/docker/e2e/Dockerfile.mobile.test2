# Mobile E2E Test Container - Alternative approach
# This container installs mobile dependencies in the base image instead

FROM node:18-bullseye

# Install system dependencies for Playwright AND mobile testing
RUN apt-get update && apt-get install -y \
    # Playwright system dependencies
    libnss3 \
    libnspr4 \
    libatk-bridge2.0-0 \
    libdrm2 \
    libxkbcommon0 \
    libgtk-3-0 \
    libgbm1 \
    libasound2 \
    # Additional dependencies for better browser support
    libxss1 \
    libgconf-2-4 \
    libxtst6 \
    libxrandr2 \
    libasound2 \
    libpangocairo-1.0-0 \
    libatk1.0-0 \
    libcairo-gobject2 \
    libgtk-3-0 \
    libgdk-pixbuf2.0-0 \
    # Mobile testing specific dependencies
    xvfb \
    x11vnc \
    fluxbox \
    # Clean up
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install npm dependencies
RUN npm ci

# Copy frontend source code
COPY frontend/ ./

# Build frontend (this is a significant setup step)
RUN npm run build

# Install dev-server dependencies (needed for some E2E tests)
WORKDIR /app/dev-server
COPY frontend/dev-server/package*.json ./
RUN npm ci
WORKDIR /app

# Install Playwright browsers with all dependencies
RUN npx playwright install --with-deps

# Install additional mobile browsers for mobile E2E tests
RUN npx playwright install chromium webkit
RUN npx playwright install-deps

# Create a non-root user for security
RUN groupadd -r playwright && useradd -r -g playwright -G audio,video playwright \
    && mkdir -p /home/playwright/Downloads \
    && chown -R playwright:playwright /home/playwright \
    && chown -R playwright:playwright /app

# Switch to non-root user
USER playwright

# Set environment variables for Playwright
ENV PLAYWRIGHT_BROWSERS_PATH=/home/playwright/.cache/ms-playwright
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1

# Default command (can be overridden)
CMD ["npx", "playwright", "test", "--help"]
